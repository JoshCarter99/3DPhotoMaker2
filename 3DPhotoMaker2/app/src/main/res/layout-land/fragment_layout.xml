<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.joshcarter.a3dphotomaker2.AutoFitView
        android:id="@+id/texture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:id="@+id/photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/flashButton"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:background="@drawable/camera_button"
        android:scaleType="centerCrop" />
    <!--android:text="@string/left_pic" -->


    <ImageButton
        android:id="@+id/info"
        style="@android:style/Widget.Material.Light.Button.Borderless"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/flashButton"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical|end"
        android:layout_marginStart="17dp"
        android:background="@drawable/info_4"
        android:contentDescription="@string/description_info"
        android:padding="20dp" />

    <!--</FrameLayout>-->

    <ImageButton
        android:id="@+id/flashButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/not_flash_4"
        android:contentDescription="@string/flash"
        android:scaleType="centerCrop" />

    <ImageButton
        android:id="@+id/squareButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/flashButton"
        android:layout_marginEnd="11dp"
        android:layout_toStartOf="@+id/flashButton"
        android:background="@drawable/not_tick_4"
        android:contentDescription="@string/square"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/bigSquare"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/big_square_4" />
